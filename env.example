# Django Settings
# SECURITY: Generate strong SECRET_KEY (50+ characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
DJANGO_SECRET_KEY=your-secret-key-here-MUST-BE-50-PLUS-CHARACTERS

# SECURITY: Set to False in production
DEBUG=False

# SECURITY: Remove localhost/127.0.0.1 in production, only include actual domains
ALLOWED_HOSTS=api.crm.click2print.store,localhost,127.0.0.1

# Database
# Format: postgresql+psycopg://user:password@host:port/database
# For Docker: postgresql+psycopg://crm:crm@db:5432/crm
DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/crm_db

# Redis
# Format: redis://[:password@]host:port/db
# For password-protected Redis: redis://:password@localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# Redis Password (optional, if using password-protected Redis)
# REDIS_PASSWORD=your-redis-password

# Media and Static Files
MEDIA_URL=/uploads/
MEDIA_ROOT=/app/media/uploads
STATIC_ROOT=/app/staticfiles

# CORS
# SECURITY: Set to False in production
CORS_ALLOW_ALL_ORIGINS=False

# SECURITY: Only include trusted domains in production
CORS_ALLOWED_ORIGINS=https://app.crm.click2print.store,https://api.crm.click2print.store,http://localhost:3000,http://127.0.0.1:3000

# JWT
# SECURITY: Generate separate JWT_SIGNING_KEY (different from SECRET_KEY)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SIGNING_KEY=your-jwt-signing-key-MUST-BE-SET

# SECURITY: JWT_SECRET (used by monitoring system)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-jwt-secret-MUST-BE-SET

# SECURITY: LOG_ENCRYPTION_KEY (must be exactly 32 bytes for AES-256)
# Generate with: openssl rand -base64 32
LOG_ENCRYPTION_KEY=your-32-byte-encryption-key-MUST-BE-EXACTLY-32-BYTES

# Email Configuration (Gmail SMTP for OTP)
# For development: Use console backend (emails printed to console)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production: Use SMTP backend with Gmail
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# TURN Server Configuration
TURN_SERVER_URL=turn:localhost:3478
TURN_SERVER_USERNAME=turnuser
TURN_SERVER_PASSWORD=turnpass
TURN_SHARED_SECRET=your-shared-secret-change-this
TURN_REALM=localhost
TURN_CREDENTIALS_EXPIRY=3600
EMAIL_USE_SSL=False
# Gmail account email (the account that will send OTP emails)
EMAIL_HOST_USER=your-email@gmail.com
# Gmail App Password (not regular password - generate from Google Account settings)
# See: https://support.google.com/accounts/answer/185833
EMAIL_HOST_PASSWORD=your-gmail-app-password
# From email address (usually same as EMAIL_HOST_USER)
DEFAULT_FROM_EMAIL=your-email@gmail.com

# SMS (for production - not used for OTP, kept for other features)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Throttling
THROTTLE_ANON=100/min
THROTTLE_USER=1000/min

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=False

# Exports Directory
EXPORTS_DIR=/app/media/exports

# Monitoring Configuration
MONITORING_STORAGE_PATH=/app/monitoring_data
STORAGE_DRIVER=local

# Database Connection Pooling (Optional)
# DB_CONN_MAX_AGE=60

# Celery Beat Schedule Interval (Optional)
# CELERY_BEAT_REPORT_CHECK_INTERVAL=3600.0

# Channels
CHANNELS_REDIS_URL=redis://localhost:6379/1

# Chat
MAX_ATTACHMENT_MB=10

# Matrix (Synapse) Configuration
# Matrix homeserver URL (internal Docker network URL for backend, public URL for frontend)
MATRIX_BASE_URL=http://synapse:8008
# Matrix server name (domain)
MATRIX_SERVER_NAME=chat.local
# Matrix Admin API access token (get from Synapse after first run)
# To generate: docker exec synapse register_new_matrix_user -a -u admin -p admin -c /data/homeserver.yaml
# Then get token from Synapse logs or use Admin API to create one
MATRIX_ADMIN_ACCESS_TOKEN=your-matrix-admin-token-here
# Public Matrix URL for frontend clients
MATRIX_PUBLIC_URL=http://localhost:8008

