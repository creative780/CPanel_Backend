# Backend Environment Variables Template
# Copy this file to .env and update the values as needed

# Django Secret Key (Required for production)
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=fallback-secret-key

# Debug Mode (Set to False in production)
DEBUG=True

# Frontend Key for API Authentication
# Optional: If not set, FrontendOnlyPermission will allow all requests (development mode)
# If set, must match NEXT_PUBLIC_FRONTEND_KEY in frontend .env.local
# Generate a secure random string for production
FRONTEND_KEY=

# Database Configuration (Optional - falls back to SQLite if not provided)
# Uncomment and configure for MySQL/PostgreSQL
# DB_NAME=your_database_name
# DB_USER=your_database_user
# DB_PASSWORD=your_database_password
# DB_HOST=localhost
# DB_PORT=3306
# DB_CONN_MAX_AGE=60

# Time Zone
TIME_ZONE=UTC

# Static and Media Files
# STATIC_ROOT=
# MEDIA_ROOT=

# CORS Configuration
# Set to False to restrict CORS to specific origins
CORS_ALLOW_ALL_ORIGINS=True
# CORS_ALLOWED_ORIGINS_EXTRA=

# CSRF Configuration
# CSRF_TRUSTED_ORIGINS_EXTRA=

# JWT Token Configuration
JWT_ACCESS_MINUTES=10
JWT_REFRESH_DAYS=7

# File Upload Limits (in bytes, default: 1GB)
# FILE_UPLOAD_MAX_MEMORY_SIZE=1073741824
# DATA_UPLOAD_MAX_MEMORY_SIZE=1073741824

# Additional Allowed Hosts (comma-separated)
# ALLOWED_HOSTS_EXTRA=

# Other Services
# GROQ_API_KEY=
# DATA_API_BASE=http://127.0.0.1:8000/api
# BOT_DEFAULT_LANG=en

# Production Settings (uncomment for production)
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True