version: 1
formatters:
    precise:
        format: '%(asctime)s - %(name)s - %(lineno)d - %(levelname)s - %(request)s - %(message)s'
handlers:
    file:
        class: logging.handlers.RotatingFileHandler
        formatter: precise
        filename: /data/log/homeserver.log
        maxBytes: 104857600
        backupCount: 10
        encoding: utf8
    console:
        class: logging.StreamHandler
        formatter: precise
loggers:
    synapse:
        level: INFO
    synapse.storage.SQL:
        level: INFO
    synapse.handlers.typing:
        level: WARN
    synapse.handlers.presence:
        level: WARN
root:
    level: INFO
    handlers: [console, file]

